{
  "name": "DaKnOb ShorTor",
  "version": "0.2",
  "description": "Shorten any URL using ShorTor developed by DaKnOb",
  "manifest_version" : 2,
  "options_ui": {
      "page": "options.html",
      "chrome_style": true
  },

  "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
    ],
  "content_security_policy" : "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
